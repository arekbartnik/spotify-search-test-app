{
	"$schema": "https://biomejs.dev/schemas/1.8.1/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"useTemplate": "off",
				"useConst": "off",
				"useSelfClosingElements": "off"
			},
			"suspicious": {
				"noArrayIndexKey": "warn"
			},
			"complexity": {
				"useArrowFunction": "off"
			},
			"a11y": {
				"useButtonType": "off"
			}
		}
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"indentWidth": 4,
		"lineEnding": "lf",
		"lineWidth": 80
	},
	"javascript": {
		"formatter": {
			"arrowParentheses": "always",
			"bracketSameLine": false,
			"trailingCommas": "all"
		}
	}
}
